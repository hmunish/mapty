{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "no-underscore-dangle": "off",
    "no-undef": "off",
    "max-classes-per-file": "off",
    "no-console": "off",
    "no-alert": "off",
    "class-methods-use-this": "off",
    "no-multi-assign": "off",
    "no-return-assign": "off",
    "consistent-return": "off",
    "no-restricted-globals": "off",
    "no-unused-vars": "off",
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ]
  },
  "ignorePatterns": ["dist/", "build/"]
}
